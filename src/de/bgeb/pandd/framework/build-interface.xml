<project name="@add_project_name_here@" basedir="." xmlns:artifact="antlib:org.apache.maven.artifact.ant">
    <description>
    	Build file for Pandd Framework Developing
    	(there are nothing to configure in this file)
    </description>

	<property name="pandd.used-arche" value="@add_arche-package_here@" />
	
	<artifact:pom id="pomfile" file="pom.xml" />
	
	<target name="clean">
		<ant antfile="${pandd.used-arche}/build-impl.xml" dir="." target="clean"/>
	</target>
	<target name="update-dependencies" >
        <defaultexcludes remove="**/.gitignore"/>
        <delete includeEmptyDirs="true">
            <fileset dir="lib" includes="**/*" excludes=".gitignore" />
        </delete>       
        <defaultexcludes add="**/.gitignore"/>
		<artifact:dependencies filesetId="deps.fileset" useScope="test" >
			<pom refid="pomfile"/>
   		</artifact:dependencies>
   		<unzip dest="lib">
    		<fileset refid="deps.fileset" />
   		</unzip>
		<ant antfile="${pandd.used-arche}/build-impl.xml" dir="." target="post_update-dependencies"/>
	</target>
	<target name="test">
		<ant antfile="${pandd.used-arche}/build-impl.xml" dir="." target="test"/>
	</target>
	<target name="publish">
		<ant antfile="${pandd.used-arche}/build-impl.xml" dir="." target="publish"/>
	</target>
	
	<target name="mvn_install">
		<ant antfile="${pandd.used-arche}/build-impl.xml" dir="." target="mvn_install"/>
	</target>
	<target name="mvn_deploy">
		<ant antfile="${pandd.used-arche}/build-impl.xml" dir="." target="mvn_deploy"/>
	</target>

</project>